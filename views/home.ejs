<%-include("partials/header")-%>
<div class="card container payment_form ">
  <div class="card-body">

    <form class="form" action="/payment" method="post">
      <div class="form-group">
        <label for="amount">Amount</label>
        <input class="form-control" type="text" name="amount" id="amount" value="" required>
      </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" id="name" value="" required>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="email" name="email" id="email" value="" required>
      </div>
      <div class="form-group">
        <label for="mobile">Mobile no.</label>
        <input class="form-control" type="text" name="mobile" id="mobile" value="" required>
      </div>
      <button type="submit" class="btn btn-dark btn-block " name="button">Pay Now</button>

    </form>
  </div>

</div>
<%-include("partials/footer")-%>
